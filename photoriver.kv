
#:kivy 1.0

BoxLayout:
    orientation: 'vertical'
    padding: 20
    spacing: 10

    TextInput:
        text: "http://192.168.1.1/"
        hint_text: "FlashAir URI"
        multiline: False
        on_text: app.flashair_uri = self.text

    TextInput:
        text: "/DCIM/102CANON"
        hint_text: "FlashAir folder"
        multiline: False
        on_text: app.folder = self.text

    TextInput:
        text: ""
        hint_text: "Album name"
        multiline: False
        on_text: app.album_name = self.text

    Button:
        text: 'Start service'
        on_press: app.start_service()

    Button:
        text: 'Stop service'
        on_press: app.stop_service()
